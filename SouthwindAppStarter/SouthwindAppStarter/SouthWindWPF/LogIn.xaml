<Page x:Class="SouthWindWPF.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SouthWindWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/backgroud.jpg"/>
        </Grid.Background>
        <TextBox x:Name="Username"  TextWrapping="Wrap" VerticalAlignment="Top" Width="278" Margin="261,93,261,0" Grid.Column="1"/>
        <PasswordBox x:Name="Password"   VerticalAlignment="Top" Width="278" Margin="261,160,261,0" />
        <Button  x:Name="Submit" Content="Submit" HorizontalAlignment="Left" Margin="360,273,0,0" VerticalAlignment="Top"  Click="SignUp_Click"/>
        <!--<Button x:Name="SignUp" Content="Sign Up" HorizontalAlignment="Left" Margin="342,350,0,0" VerticalAlignment="Top" FontSize="20" Background="Transparent" FontWeight="Bold" Foreground="White"/>-->
        <Label Content="Log In" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="40" FontWeight="Bold" Foreground="Wheat"/>


    </Grid>
</Page>
